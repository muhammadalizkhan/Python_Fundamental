        "def clean(floor):\n",
        "    i, j, row, col = 0, 0, len(floor), len(floor[0])\n",
        "    for i in range(row):\n",
        "        if(i%2 == 0):\n",
        "            for j in range(col):\n",
        "                if(floor[i][j] == 1):\n",
        "                    print_F(floor, i, j)\n",
        "                    floor[i][j] = 0\n",
        "                print_F(floor, i, j)\n",
        "        else:\n",
        "            for j in range(col-1, -1, -1):\n",
        "                if(floor[i][j] == 1):\n",
        "                    print_F(floor, i, j)\n",
        "                    floor[i][j] = 0\n",
        "                print_F(floor, i, j)"
